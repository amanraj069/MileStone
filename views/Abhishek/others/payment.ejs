<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Payment Success - ZeroGravity</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/EmployerD/payment.css" />
  </head>
  <body>
    <!-- Blurred background (optional, can be removed if not needed) -->
    <div class="dashboard-wrapper"></div>

    <!-- Overlay with payment animation -->
    <div class="overlay-container">
      <div class="card">
        <div class="card-content">
          <div class="checkmark-container">
            <div class="checkmark-blur"></div>
            <svg class="checkmark" viewBox="0 0 100 100">
              <circle cx="50" cy="50" r="40"></circle>
              <path d="M30 50L45 65L70 35"></path>
            </svg>
          </div>

          <div class="text-container">
            <h2 class="title">Payment Successful</h2>
            <div class="transfer-details">
              <div class="transfer-card">
                <div class="transfer-section">
                  <span class="transfer-label">
                    <svg
                      width="12"
                      height="12"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <path d="M12 19V5M5 12l7-7 7 7"></path>
                    </svg>
                    Paid
                  </span>
                  <div class="transfer-amount">
                    <span class="currency-icon">â‚¹</span>
                    <span class="amount-text">868.61</span>
                  </div>
                </div>

                <div class="divider"></div>

                <div class="transfer-section">
                  <span class="transfer-label">
                    <svg
                      width="12"
                      height="12"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <path d="M12 5v14M5 12l7 7 7-7"></path>
                    </svg>
                    Account Upgraded To
                  </span>
                  <div class="transfer-amount">
                    <span class="amount-text">Premium User</span>
                  </div>
                </div>
              </div>
            </div>
            <div class="exchange-rate">Subscription duration: 1 month</div>
            <div class="return-button">
              <button>
                <a href="/employerD/profile"> Return to Dashboard </a>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
      // Call backend to upgrade subscription
      fetch("/employerD/upgrade_subscription", { method: "POST" })
        .then((res) => res.json())
        .then((data) => {
          // Optionally handle success/failure
        });

      // Redirect to profile page after 3 seconds
      setTimeout(() => {
        //   window.location.href = '/employerD/profile?upgraded=true';
        window.location.href = "/employerD/profile?upgraded=true";
      }, 3000);
    </script>
  </body>
</html>
