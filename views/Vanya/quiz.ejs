<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Skill Quiz - <%= skill.name %> - Dashboard</title>
    <link
      rel="stylesheet"
      href="/fontawesome/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/FreelancerD/sidebar.css" />
    <link rel="stylesheet" href="/css/FreelancerD/quiz_style.css" />
  </head>
  <body>
    <div class="dashboard-wrapper">
      <!-- Sidebar -->
      <%- include('./partials/sidebar', {activePage: 'skills_badges', user:
      user}) %>

      <!-- Main Content Area -->
      <div class="main-content">
        <div class="page-header">
          <h1 class="page-title">Quiz: <%= skill.name %></h1>
          <p class="page-subtitle">
            Test your knowledge to earn this skill for your profile
          </p>
        </div>

        <div class="content-card">
          <div class="quiz-progress">
            <div
              class="quiz-progress-bar"
              style="width: 0%"
              id="progressBar"
            ></div>
          </div>

          <div class="quiz-container">
            <form id="quiz-form">
              <% skill.questions.forEach((question, index) => { %>
              <div class="question-card">
                <h4>
                  <i class="fas fa-question-circle"></i>
                  Question <%= index + 1 %> (<%= question.marks %> marks)
                </h4>
                <p><%= question.questionText %></p>
                <div class="options">
                  <% question.options.forEach((option, optIndex) => { %>
                  <label class="option">
                    <input
                      type="radio"
                      name="<%= question.questionId %>"
                      value="<%= option %>"
                      required
                      onchange="updateProgress()"
                    />
                    <span
                      ><%= String.fromCharCode(65 + optIndex) %>. <%= option
                      %></span
                    >
                  </label>
                  <% }) %>
                </div>
              </div>
              <% }) %>
              <button type="submit" class="submit-quiz-btn">
                <i class="fas fa-paper-plane"></i>
                Submit Quiz
              </button>
            </form>
          </div>

          <!-- Result Popup -->
          <div id="result-popup" class="popup hidden">
            <div class="popup-content">
              <h3 id="result-title"></h3>
              <p id="result-message"></p>
              <p id="result-score"></p>
              <button id="result-close-btn" class="popup-btn">
                <i class="fas fa-check"></i>
                Done
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="/js/FreelancerD/quiz.js"></script>
    <script>
      // Initialize quiz when DOM is ready
      document.addEventListener('DOMContentLoaded', function() {
        const skillId = '<%= skill.skillId %>';
        const totalQuestions = parseInt('<%= skill.questions.length %>');
        initializeQuiz(skillId, totalQuestions);
      });
    </script>
  </body>
</html>
