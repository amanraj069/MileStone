<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Skills & Badges - Dashboard</title>
    <link rel="stylesheet" href="/css/FreelancerD/static_elements/sidebar.css" />
    <link rel="stylesheet" href="/css/FreelancerD/skills_badges.css" />
    <link
      rel="stylesheet"
      href="/fontawesome/css/all.min.css"
    />
  </head>
  <body>
    <div class="dashboard-wrapper">
      <!-- Sidebar -->
      <%- include('./partials/sidebar', {activePage: 'skills_badges', user:
      user}) %>

      <!-- Main Content Area -->
      <div class="main-content">
        <div class="page-header">
          <h1 class="page-title">Skills & Badges</h1>
          <p class="page-subtitle">
            Earn badges by completing tasks and showcasing your expertise. Take
            quizzes to add new skills to your profile.
          </p>
        </div>

        <div class="content-card">
          <!-- Skills Section -->
          <section class="skills-section">
            <h4 class="section-title">
              <i class="fas fa-code"></i>
              Your Skills
            </h4>
            <div class="skills-list">
              <% if (freelancerSkills && freelancerSkills.length > 0) { %> <%
              freelancerSkills.forEach(skill => { %>
              <span class="skill-tag"><%= skill %></span>
              <% }) %> <% } else { %>
              <div class="no-content">
                No skills acquired yet. Take a quiz to add skills!
              </div>
              <% } %>
            </div>

            <div class="add-skill">
              <h5>Available Skills</h5>
              <div class="skills-list available-skills">
                <% skills.forEach(skill => { %>
                <div class="skill-item">
                  <span
                    class="skill-tag <%= skill.isAcquired ? 'acquired' : '' %>"
                  >
                    <%= skill.name %> <% if (skill.isAcquired) { %>
                    <span class="acquired-check">âœ”</span>
                    <% } %>
                  </span>
                  <% if (skill.hasQuiz && !skill.isAcquired) { %>
                  <a
                    href="skills_badges/quiz/<%= skill.skillId %>"
                    class="take-quiz-btn"
                  >
                    Take Quiz
                  </a>
                  <% } %>
                </div>
                <% }) %>
              </div>
            </div>
          </section>

          <!-- Badges Section -->
          <section class="badges-section">
            <h4 class="section-title">
              <i class="fas fa-medal"></i>
              Your Badges
            </h4>
            <div class="badges-grid">
              <div class="badge-item">
                <img
                  src="/assets/portfolio/topfreelancer_badge.png"
                  alt="Top Freelancer"
                />
                <h5>Top Freelancer</h5>
                <p>Earned for completing 50+ projects with a 4.5+ rating</p>
                <span class="badge-date">Earned: Jan 2025</span>
              </div>
              <div class="badge-item">
                <img
                  src="/assets/portfolio/risingstar_badge.png"
                  alt="Rising Star"
                />
                <h5>Rising Star</h5>
                <p>Earned for completing 10 projects within first 3 months</p>
                <span class="badge-date">Earned: Aug 2024</span>
              </div>
              <div class="badge-item">
                <img
                  src="/assets/portfolio/codemaster_badge.png"
                  alt="Code Master"
                />
                <h5>Code Master</h5>
                <p>Earned for expertise in 5+ programming languages</p>
                <span class="badge-date">Earned: Nov 2024</span>
              </div>
            </div>
          </section>
        </div>
      </div>
    </div>
  </body>
</html>
