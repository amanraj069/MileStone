<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Active Jobs - FreelancePro</title>
    <link rel="stylesheet" href="/css/FreelancerD/static_elements/header.css" />
    <link rel="stylesheet" href="/css/FreelancerD/static_elements/sidebar.css" />
    <link rel="stylesheet" href="/css/FreelancerD/active_job_style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
  </head>
  <body>
    <div class="dashboard-wrapper">
      <!-- Sidebar -->
      <%- include('./partials/sidebar', {activePage: 'active_job'}) %>

      <!-- Main Content Area -->
      <div class="main-content">
        <!-- Active Jobs Section -->
        <div id="active-jobs" class="content-section active">
          <div class="content-header">
            <h2>Active Jobs</h2>
          </div>

          <div class="job-cards">
            <% active_jobs.forEach(job => { %>
            <div class="job-card" data-job-id="<%= job.id %>">
              <div class="job-top">
                <div class="job-company-logo">
                  <img src="<%= job.logo %>" alt="Company Logo" />
                </div>
                <div class="job-actions">
                  <button
                    class="chat-btn"
                    onclick="window.location.href='/chat/<%= job.employerUserId || job.id %>'"
                    title="Chat with Employer"
                  >
                    <i class="fas fa-comment"></i>
                  </button>
                  <button class="complain-btn" onclick="raiseComplaint('<%= job.id %>')" title="Raise Complaint">
                    <i class="fas fa-exclamation-triangle"></i>
                  </button>
                  <button class="leave-job-btn" onclick="leaveJob('<%= job.id %>')" title="Leave Job">
                    <i class="fas fa-sign-out-alt"></i>
                  </button>
                  <a href="/jobs/<%= job.id%>" class="see-more-btn" title="View Details">
                    <i class="fas fa-eye"></i>
                  </a>
                </div>
              </div>
              <div class="job-info">
                <h3 class="job-title"><%= job.title %></h3>
                <div class="job-company"><%= job.company %></div>
                <div class="job-tech">
                  <% job.tech.forEach(tech => { %>
                  <span class="tech-tag"><%= tech %></span>
                  <% }) %>
                </div>
                <div class="job-meta">
                  <div class="job-deadline">
                    <i class="far fa-clock"></i> <%= job.deadline %>
                  </div>
                  <div class="job-price"><%= job.price %></div>
                </div>
                <div class="job-progress">
                  <div class="progress-label">
                    <span>Milestone Progress</span>
                    <span><%= job.progress %>%</span>
                  </div>
                  <div class="progress-bar">
                    <div class="progress-filled" style="width: <%= job.progress %>%"></div>
                  </div>
                </div>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
      </div>
    </div>

    <script src="/js/FreelancerD/active_job.js"></script>
  </body>
</html>