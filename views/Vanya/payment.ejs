<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Payments - Dashboard</title>
    <link rel="stylesheet" href="/css/FreelancerD/static_elements/sidebar.css" />
    <link rel="stylesheet" href="/css/FreelancerD/payment.css" />
    <link
      rel="stylesheet"
      href="/fontawesome/css/all.min.css"
    />
  </head>
  <body>
    <div class="dashboard-wrapper">
      <!-- Sidebar -->
      <%- include('./partials/sidebar', {activePage: 'payment', user: user}) %>

      <!-- Main Content Area -->
      <div class="main-content">
        <div class="page-header">
          <h1 class="page-title">Payments</h1>
          <p class="page-subtitle">
            View payment details and milestone progress for your active jobs
          </p>
        </div>

        <div class="content-card">
          <% if (jobs && jobs.length > 0) { %> 
          <% jobs.forEach(job => { %>
          <div class="job-section">
            <h4><i class="fas fa-briefcase"></i> Job Overview</h4>
            <div class="job-details">
              <p><strong>Job Name:</strong> <span><%= job.title %></span></p>
              <p><strong>Company:</strong> <span><%= job.company %></span></p>
              <p>
                <strong>Skills:</strong>
                <span><%= job.skills.join(', ') %></span>
              </p>
              <p><strong>Deadline:</strong> <span><%= job.deadline %></span></p>
              <p>
                <strong>Amount:</strong>
                <span class="amount-highlight"><%= job.amount %></span>
              </p>
            </div>
            <div class="milestone-details">
              <h5><i class="fas fa-chart-line"></i> Milestone Progress</h5>
              <div class="progress-bar-container">
                <div class="progress-bar">
                  <div
                    class="progress"
                    data-progress="<%= job.progress %>"
                  ></div>
                </div>
                <p class="progress-percentage"><%= job.progress %>% Complete</p>
              </div>
              <a
                href="/freelancerD/milestone/<%= job.id %>"
                class="milestone-btn"
              >
                <i class="fas fa-eye"></i> View Milestones
              </a>
            </div>
          </div>
          <% }) %> 
          <% } else { %>
          <div class="no-jobs">
            <i class="fas fa-wallet"></i>
            <h3>No active jobs found</h3>
            <p>You don't have any active jobs with payment information.</p>
          </div>
          <% } %>
        </div>
      </div>
    </div>
    
    <script src="/js/FreelancerD/payment.js"></script>
  </body>
</html>