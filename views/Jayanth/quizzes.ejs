<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Skill Quizzes</title>
    <link rel="stylesheet" href="/css/adminD/sidebar.css" />
    <link rel="stylesheet" href="/css/adminD/quizzes.css" />
    <link rel="stylesheet" href="/fontawesome/css/all.min.css">
  </head>
  <body>
    <div class="dashboard-wrapper">
      <%- include('Partials/sidebar', { user: user, activePage: 'quizzes' })
      %>
      <div class="main-content">
        <section id="quizzes" class="section-content active">
          <div class="section-title">
            <h1>Skill Quizzes</h1>
            <a href="/adminD/quizzes/add" class="btn-add-quiz">
              <svg
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                xmlns="http://www.w3.org/2000/svg"
              >
                <line x1="12" y1="5" x2="12" y2="19"></line>
                <line x1="5" y1="12" x2="19" y2="12"></line>
              </svg>
              Add New Skill
            </a>
          </div>

          <div class="search-bar">
            <form action="/adminD/quizzes" method="GET" class="search-form">
              <input
                type="text"
                name="q"
                placeholder="Search skills..."
                class="search-input"
                value="<%= searchQuery %>"
              />
              <button type="submit" class="search-button">
                <svg
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="white"
                  stroke-width="2"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <circle cx="11" cy="11" r="8"></circle>
                  <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                </svg>
              </button>
            </form>
          </div>

          <div class="skills-container">
            <% if (skills && skills.length > 0) { %> <% skills.forEach(skill =>
            { %>
            <div class="skill-card">
              <div class="skill-header">
                <h3 class="skill-name"><%= skill.name %></h3>
              </div>
              <div class="skill-body">
                <div class="skill-info">
                  <div class="skill-stat">
                    <svg
                      width="16"
                      height="16"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <circle cx="12" cy="12" r="10" />
                      <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3" />
                      <line x1="12" y1="17" x2="12.01" y2="17" />
                    </svg>
                    Questions: <%= skill.questionCount %>
                  </div>
                  <div class="skill-stat">
                    <svg
                      width="16"
                      height="16"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <rect x="3" y="4" width="18" height="18" rx="2" ry="2" />
                      <line x1="16" y1="2" x2="16" y2="6" />
                      <line x1="8" y1="2" x2="8" y2="6" />
                      <line x1="3" y1="10" x2="21" y2="10" />
                    </svg>
                    Created: <%= new Date(skill.createdAt).toLocaleDateString()
                    %>
                  </div>
                </div>
                <div class="skill-actions">
                  <a
                    href="/adminD/quizzes/edit/<%= skill.skillId %>"
                    class="btn-edit"
                  >
                    <svg
                      width="16"
                      height="16"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <path
                        d="M20 14.66V20a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h5.34"
                      />
                      <polygon points="18 2 22 6 12 16 8 16 8 12 18 2" />
                    </svg>
                    Edit Quiz
                  </a>
                  <button
                    class="btn-delete"
                    data-skill-id="<%= skill.skillId %>"
                    onclick="confirmDelete('<%= skill.skillId %>', '<%= skill.name %>')"
                  >
                    <svg
                      width="16"
                      height="16"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <polyline points="3 6 5 6 21 6" />
                      <path
                        d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"
                      />
                      <line x1="10" y1="11" x2="10" y2="17" />
                      <line x1="14" y1="11" x2="14" y2="17" />
                    </svg>
                    Delete
                  </button>
                </div>
              </div>
            </div>
            <% }); %> <% } else { %>
            <div class="no-results">
              <% if (searchQuery) { %>
              <h3>No skills found matching "<%= searchQuery %>"</h3>
              <p>
                Try a different search term or
                <a href="/adminD/quizzes/add">create a new skill</a>.
              </p>
              <% } else { %>
              <h3>No skills found</h3>
              <p>
                Get started by
                <a href="/adminD/quizzes/add">creating your first skill</a>.
              </p>
              <% } %>
            </div>
            <% } %>
          </div>
        </section>
      </div>
    </div>

    <script src="/js/adminD/quizzes.js"></script>
  </body>
</html>
